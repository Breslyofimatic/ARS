                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/FPMDireccion"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/FPMTV6"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/FPMTV7"
                android:text="Telefono"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/FPMDireccion"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/FPMTelefono"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/FPMTV7"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/FPMTV8"
                android:text="Tipo de sangre"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/FPMTelefono"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/FPMSangre"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/FPMTV8"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>



            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/FPMimageView"
                android:layout_alignParentTop="true" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="35dp"
                android:id="@+id/FPMimgVencimiento"
                android:visibility="gone"
                android:layout_toRightOf="@id/FPMimageView"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/FPMEstatus"
                android:layout_below="@+id/FPMimgVencimiento"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/FPMimageView"
                android:layout_marginLeft="25dp"
                android:textSize="26sp"/>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
